#!/usr/bin/env bash
set -e

# Enable ipywidgets in classic Notebook (harmless in JupyterLab/Voila).
jupyter nbextension enable --sys-prefix --py widgetsnbextension || true

# Register Voila as a Jupyter server extension (syntax differs by Jupyter Server version).
jupyter server extension enable voila --sys-prefix || \
jupyter serverextension enable voila --sys-prefix || true